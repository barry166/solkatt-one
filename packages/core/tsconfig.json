{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "es6"
    ],
    // "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "skipLibCheck": true,
    // "declaration": false,
    // "sourceMap": false,
    // "noUnusedLocals": true,
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "package.json"
  ],
}